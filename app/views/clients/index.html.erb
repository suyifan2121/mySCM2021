<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <div class="content-wrapper">

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Clients
          <small>Management</small>
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Manage Clients</li>
        </ol>
      </section>

      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <!-- Main data table -->
            <div class="box">

              <!-- /.box-header -->
              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Contact Person</th>
                      <th>Phone</th>
                      <th>Email</th>
                      <th>Client Address</th>
                      <th>Edit</th>
                      <!-- remark: hide the delete button from unauthorized users -->
                      <% if can? :delete, Client %>
                        <th>Delete</th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @clients.each do |client| %>
                    <tr>
                      <td><%= client.id %></td>
                      <td><%= client.name %></td>
                      <td><%= client.contact_person %></td>
                      <td><%= client.phone %></td>
                      <td><%= client.email %></td>
                      <td><%= client.address %></td>
                      <td><%= link_to 'Edit', edit_client_path(client) %></td>
                      <!-- remark: hide the delete button from unauthorized users -->
                      <% if can? :delete, Client %>
                        <td><%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure you want to delete this client?' } %></td>
                      <% end %>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
          </div>
        </div>
      </section>


    </div>
    <%= render 'layouts/footer' %>
  </div>
  <script>
    $(function () {
      $("#example1").DataTable();
      
    });
  </script>
</body>

